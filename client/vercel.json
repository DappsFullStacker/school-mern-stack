{
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongodb-uri",
    "JWT_SECRET": "@jwt-secret",
    "PORT": "5000"
  },
  "routes": [
    { "src": "/api/auth/register", "dest": "/backend/src/routes/auth.js" },
    { "src": "/api/auth/login", "dest": "/backend/src/routes/auth.js" },
    { "src": "/api/auth/me", "dest": "/backend/src/routes/auth.js" },
    { "src": "/api/management/students", "dest": "/backend/src/routes/management.js" },
    { "src": "/api/management/teachers", "dest": "/backend/src/routes/management.js" },
    { "src": "/api/scoreboard/averages", "dest": "/backend/src/routes/scoreboard.js" },
    { "src": "/api/(.*)", "dest": "/backend/src/routes/$1" },
    { "src": "/(.*)", "dest": "/client/build/index.html" }
  ]
}
